  span#logo: img(height="45px" src="https://cdn.betterttv.net/style/logos/settings_logo.png")
  ul.nav
    li: a(href="#bttvAbout") About
    li.active: a(href="#bttvSettings") Settings
    li: a(href="#bttvChannel" target="_blank") Channel
    li: a(href="#bttvChangelog") Changelog
